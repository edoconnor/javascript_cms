<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link href="/style.css" rel="stylesheet" />
    <title>Blog Page</title>
  </head>
  <body>
    <nav class="navbar navbar-light" style="background-color: #ecf0f1">
      <ul class="navbar-nav mx-auto order-0">
        <li class="nav-item">
          <a class="navbar-title" href="/logout">/</a>
        </li>
        <li class="nav-item">
          <a class="navbar-title" href="/index">random_things</a>
        </li>
        <li class="nav-item">
          <a class="navbar-title" href="/new">+</a>
        </li>
      </ul>
    </nav>
    <div class="container">
      <div class="row">
        <% articles.forEach(article => { %>
        <div class="col-12 col-sm-6 col-lg-4">
          <div class="index-card mt-2">
            <img
              class="img-fluid"
              src="<%= article.image %>"
              alt="Responsive image"
            />
            <div class="index-card-body">
              <h5 class="index-card-title">
                <a href="<%= article.title %>"> </a>
              </h5>
              <h3 class="index-card-text">
                <a href="<%= article.subtitle %>"> </a>
              </h3>
              <p class="index-card-text"><%= article.content %></p>
              <p class="index-byline">
                Posted <%= article.createdAt.toLocaleDateString() %>
              </p>
            </div>
            <a href="/<%= article.slug %>" class="btn btn-outline-primary"
              >Read More</a
            >
            <a href="/edit/<%= article.id %>" class="btn btn-outline-primary"
              >Edit</a
            >
            <form
              action="/<%= article.id %>?_method=DELETE"
              method="POST"
              class="d-inline"
            >
              <button type="submit" class="btn btn-outline-danger">
                Delete
              </button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
